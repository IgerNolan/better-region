{
  "name": "better-region",
  "displayName": "BetterRegion",
  "description": "Fold code between region and endregion markers, with customizable marker highlighting.",
  "version": "1.0.0",
  "publisher": "IgerNolan",
  "galleryBanner": {
    "color": "#4CAF50"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IgerNolan/better-region"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "BetterRegion Settings",
      "properties": {
        "betterRegion.markerColor": {
          "type": "string",
          "default": "green",
          "description": "Color used to highlight region marker lines. Accepts any valid CSS color string."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/vscode": "^1.50.0",
    "typescript": "^4.9.5",
    "vscode": "^1.1.37"
  }
}